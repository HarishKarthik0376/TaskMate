<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_black"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_90sdp"
        style="@style/CARD"
        app:strokeColor="@color/goldenyello"
        app:strokeWidth="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you have completed this task?"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:id="@+id/dialogdeletetext"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/inter"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center">
            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/lightyellow"
                app:strokeWidth="2dp"
                android:text="NO"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:id="@+id/nodelete"
                android:fontFamily="@font/inter"
                app:cornerRadius="5dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_30sdp"
                android:backgroundTint="@color/black"
                app:strokeColor="@color/goldenyello"
                app:strokeWidth="2dp"
                android:text="YES"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/yesdelete"
                android:textColor="@color/goldenyello"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/inter"
                app:cornerRadius="5dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>