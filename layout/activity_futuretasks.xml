<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/futuremain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context=".futuretasks">
    <LinearLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toTopOf="@id/adView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="5dp"
        android:id="@+id/linearlayout1"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:strokeColor="@color/goldenyello"
            app:strokeWidth="2dp"
            style="@style/CARD3">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/newreturnfuture"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/futuregoback"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="20dp"/>
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/newfutureadd"
                    app:layout_constraintStart_toStartOf="@id/futuregoback"
                    app:layout_constraintEnd_toEndOf="@id/filtterfuturetask"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/addfuturetask"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="0dp"/>
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/newfilterfuture"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/filtterfuturetask"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_47sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="-----SPACE FOR ADS-----"
        android:layout_marginTop="@dimen/_5sdp"
        android:textAlignment="center"
        android:textColor="@color/goldenyello"
        android:fontFamily="@font/inter"
        android:textSize="@dimen/_15sdp"
        />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_47sdp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/idforadd">
    </com.google.android.gms.ads.AdView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/lineartop">
    <TextView
        android:id="@+id/todaysday"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter"
        android:text="FUTURE"
        android:textAlignment="center"
        style="@style/textcolor2"
        android:textSize="27sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TASK'S"
        android:textSize="21sp"
        style="@style/textcolor1"
        android:textStyle="bold"
        android:id="@+id/tasktext"
        android:fontFamily="@font/inter"
        android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lineartop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearlayout1">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerviewfuture" />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lineartop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/constraintnothingtoshow1"
        app:layout_constraintBottom_toTopOf="@id/linearlayout1"
        android:layout_marginBottom="70dp"
        >
        <ImageView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/nothingtoseehere"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/palnet"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The List Is Empty :("
            style="@style/textcolor3"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/listisemptytext"
            app:layout_constraintTop_toBottomOf="@id/nothingtoseehere"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on the + icon to add a task"
            style="@style/textcolor1"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/listisemptytext1"
            app:layout_constraintTop_toBottomOf="@id/listisemptytext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>