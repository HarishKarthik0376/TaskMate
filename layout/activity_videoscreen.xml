<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/newlogopng" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TaskMate"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Task Manager"
            android:layout_marginTop="2dp"
            android:textColor="@color/goldenyello"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/_110sdp"
    >
    <VideoView
        android:id="@+id/videofile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
       android:layout_gravity="center"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="bottom">
    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_45sdp"
        app:cornerRadius="@dimen/_10sdp"
        android:backgroundTint="@color/goldenyello"
        android:text="Login With Email"
        android:textColor="@color/background_black"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:textSize="@dimen/_17sdp"
        app:rippleColor="@color/white"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/redirecttologinpage"
        android:layout_marginTop="10dp"/>
<!--    <ImageButton-->
<!--        android:layout_width="@dimen/_260sdp"-->
<!--        android:layout_height="@dimen/_40sdp"-->
<!--        android:layout_gravity="center|bottom"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:background="@drawable/linearradius"-->
<!--        android:src="@drawable/newgoogle"-->

<!--      />-->
    </LinearLayout>

</LinearLayout>